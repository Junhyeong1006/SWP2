import random, time


class Play:
    def __init__(self):
        self.number = 0  # 생성자
        self.numlist = []  # 랜덤난수 리스트
        self.numlist_user = []  # 내가 입력한수 리스트
        self.roundcnt = 1
        self.counting = 0

    def playGame(self):
        self.realBreak = True
        breaktime = 0.5
        while self.realBreak:
            if self.roundcnt % 3 == 0:
                breaktime -= 0.1
            self.number = random.choices(range(1, 5), k=1)[0]
            self.numlist.append(self.number)
            for k in range(self.roundcnt):
                print(self.numlist[k], end=' ')
                time.sleep(breaktime)
            print('')
            self.numlist_user.clear()
            self.countingnum()
            if not self.realBreak:
                print("숫자가 틀려 게임을 종료합니다.")
            else:
                self.roundcnt += 1

    def countingnum(self, ):
        for j in range(len(self.numlist)):
            numinput = int(input('숫자 입력: '))
            self.numlist_user.append(numinput)
            if self.numlist[j] == self.numlist_user[j]:
                continue
            else:
                self.realBreak = False
                break


play = Play()
play.playGame()


